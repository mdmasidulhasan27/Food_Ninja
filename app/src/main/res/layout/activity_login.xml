<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pattern"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:background="@drawable/gradient_white_null"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="#00ffffff"
            android:src="@drawable/food_image"
            tools:ignore="MissingConstraints"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:orientation="vertical"
            android:id="@+id/ninjaFoodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foodninja"
            android:fontFamily="@font/viga_regular"
            android:textColor="@color/textDGreen"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/foodImage"
            />
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Deliver Favorite Food"
            android:textSize="13dp"
            android:textStyle="normal"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/inter"
            app:layout_constraintTop_toBottomOf="@id/ninjaFoodText"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="Login to your account"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/benton_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/comment"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <EditText
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:paddingHorizontal="28dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textStyle="normal"
            android:fontFamily="@font/benton_sans_regular"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            />
        <EditText
            android:layout_width="325dp"
            android:layout_height="57dp"
            android:paddingHorizontal="28dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textStyle="normal"
            android:fontFamily="@font/benton_sans_regular"
            android:textSize="14dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="or continue with"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/textBlack"
            android:fontFamily="@font/benton_sans_bold"
            app:layout_constraintTop_toBottomOf="@id/comment"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edittext"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/facebook_icon"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/google_icon"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:background="#00000000"
            android:layout_gravity="center"
            android:text="Forgot Your Password?"
            android:textSize="12dp"
            android:textStyle="normal"
            android:textColor="@color/textDGreen"
            android:fontFamily="@font/benton_sans_regular"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <Button
            android:layout_width="141dp"
            android:layout_height="57dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/bg_button"
            android:layout_gravity="center"
            android:text="Login"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>